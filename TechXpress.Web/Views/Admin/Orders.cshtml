@model IEnumerable<TechXpress.Models.Dto_s.OrderDTO>
@{
    ViewData["Title"] = "Order Management";
    Layout = "_AdminLayout";
}

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered datatable" id="ordersTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Order #</th>
                        <th>Date</th>
                        <th>Customer</th>
                        <th>Items</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.Id</td>
                            <td>@order.OrderDate.ToString("MM/dd/yyyy HH:mm")</td>
                            <td>@order.UserEmail</td>
                            <td>@order.OrderItems.Count()</td>
                            <td>$@order.TotalAmount.ToString("F2")</td>
                            <td>
                                @if (order.Status.ToString() == "Completed")
                                {
                                    <span class="badge bg-success">@order.Status</span>
                                }
                                else if (order.Status.ToString() == "Processing")
                                {
                                    <span class="badge bg-primary">@order.Status</span>
                                }
                                else if (order.Status.ToString() == "Cancelled")
                                {
                                    <span class="badge bg-danger">@order.Status</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@order.Status</span>
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("OrderDetails", "Admin", new { id = order.Id })" class="btn btn-sm btn-primary">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    
} 