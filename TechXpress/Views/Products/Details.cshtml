@model TechXpress.Models.Products

@{
    ViewData["Title"] = "Product Details";
}

<h1>Product Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Product ID</dt>
        <dd class="col-sm-10">@Model.ProductID</dd>

        <dt class="col-sm-2">Product Name</dt>
        <dd class="col-sm-10">@Model.ProductName</dd>

    
    </dl>
</div>

<div>
    <a class="btn btn-secondary" asp-action="Index" asp-route-categoryId="@Model.CategoryID">Back to Products</a>
</div>
    