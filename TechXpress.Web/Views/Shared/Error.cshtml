@model string
@{
    var isAdmin = Context.Request.Path.StartsWithSegments("/Admin");
    Layout = isAdmin ? "_AdminLayout" : "_Layout";
    ViewData["Title"] = "Error";
}

<div class="container mt-4">
    <div class="card shadow border-left-danger">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-danger">Error Occurred</h6>
        </div>
        <div class="card-body">
            <div class="text-center mb-4">
                <i class="bi bi-exclamation-triangle text-danger" style="font-size: 3rem;"></i>
            </div>
            
            <div class="text-center mb-4">
                <h4>An error occurred while processing your request.</h4>
                @if (!string.IsNullOrEmpty(Model))
                {
                    <div class="alert alert-danger mt-3">
                        <strong>Error Details:</strong> @Model
                    </div>
                }
            </div>

            <div class="text-center">
                @if (isAdmin)
                {
                    <a asp-controller="Admin" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-house"></i> Back to Dashboard
                    </a>
                }
                else
                {
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-house"></i> Back to Home
                    </a>
                }
            </div>
        </div>
    </div>
</div> 