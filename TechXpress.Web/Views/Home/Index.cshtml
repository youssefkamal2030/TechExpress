<!-- Featured Products -->
<section class="cards-2">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="h2-heading">Featured Products</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                @if (Model == null || !Model.Any())
                {
                    <p>No featured products available at the moment.</p>
                }
                else
                {
                    @foreach (var product in Model)
                    {
                        <div class="card">
                            <div class="card-body">
                                @if (!string.IsNullOrEmpty(product.ImageUrl))
                                {
                                    <img class="img-fluid" src="@product.ImageUrl" alt="@product.Name">
                                }
                                else
                                {
                                    <img class="img-fluid" src="/images/placeholder.jpg" alt="No image available">
                                }
                                <h5 class="card-title">@product.Name</h5>
                                <p>@product.Price.ToString("C")</p>
                                <p>Category: @product.CategoryName</p>
                                <a class="btn-solid-reg" href="/Product/Details/@product.Id">View Details</a>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</section>

