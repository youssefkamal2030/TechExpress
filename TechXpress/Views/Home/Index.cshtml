@model IEnumerable<TechXpress.Models.Categories>

@{
    ViewData["Title"] = "Categories";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-sm mt-4">
                <div class="card-body">
                    <h2 class="card-title mb-4">Categories</h2>

                    <a class="btn btn-primary mb-3" asp-action="Create" asp-controller="Categories">
                        Create New
                    </a>

                    @if (Model == null || !Model.Any())
                    {
                        <p class="text-danger">No categories found.</p>
                    }
                    else
                    {
                        <table class="table table-striped table-hover align-middle">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th style="width: 25%">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.CategoryName</td>
                                        <td>
                                            <a class="btn btn-warning btn-sm"
                                               asp-action="Edit"
                                               asp-controller="Categories"
                                               asp-route-id="@item.CategoryID">
                                                Edit
                                            </a>
                                            <a class="btn btn-danger btn-sm"
                                               asp-action="Delete"
                                               asp-controller="Categories"
                                               asp-route-id="@item.CategoryID">
                                                Delete
                                            </a>
                                            <a class="btn btn-info btn-sm"
                                               asp-action="Index"
                                               asp-controller="Products"
                                               asp-route-categoryId="@item.CategoryID">
                                                View
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
