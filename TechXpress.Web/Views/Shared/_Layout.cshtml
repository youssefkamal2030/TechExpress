<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- SEO Meta Tags -->
    <meta name="description" content="TechXpress is your one-stop shop for the latest electronics.">
    <meta name="author" content="YourName">
    <!-- Website Title -->
    <title>TechXpress - Electronics Store</title>
    <!-- Styles -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/6.8.4/swiper-bundle.min.css">
    <link rel="stylesheet" href="~/css/Layout.css">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom fixed-top">
        <div class="container">
            <a class="navbar-brand logo-text" href="/">TechXpress</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarsExampleDefault">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Product/Index">Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/About/Index">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Contact/Index">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Cart/Index">Cart</a>
                    </li>
                </ul>
                @if (User.Identity.IsAuthenticated)
                {
                    <span class="nav-item">
                        <a class="btn-outline-sm" href="/Account/Logout">Log Out</a>
                    </span>
                }
                else
                {
                    <span class="nav-item">
                        <a class="btn-outline-sm" href="/Account/Login">Log In</a>
                    </span>
                    <span class="nav-item">
                        <a class="btn-outline-sm" href="/Account/Register">Sign Up</a>
                    </span>
                }
            </div>
        </div>
    </nav>
    <!-- End of Navigation -->
    <!-- Page Content -->
    <div class="container mt-5 pt-5">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="footer mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h4>About TechXpress</h4>
                    <p>TechXpress is dedicated to providing the latest electronics at competitive prices.</p>
                </div>
                <div class="col-md-4">
                    <h4>Important Links</h4>
                    <ul class="list-unstyled">
                        <li><a href="/Terms">Terms & Conditions</a></li>
                        <li><a href="/Privacy">Privacy Policy</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h4>Contact</h4>
                    <p><i class="fas fa-map-marker-alt"></i> 123 Tech Street, City, Country</p>
                    <p><i class="fas fa-envelope"></i> <a href="mailto:contact@techxpress.com">contact@techxpress.com</a></p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/6.8.4/swiper-bundle.min.js"></script>
    <script src="~/js/Layout.js"></script>
  
</body>
</html>