@model TechXpress.Models.Products

@{
    ViewData["Title"] = "Product Details";
}

<h1>Product Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Product Name</dt>
        <dd class="col-sm-10">@Model.ProductName</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>

        <dt class="col-sm-2">Stock</dt>
        <dd class="col-sm-10">@Model.Stock</dd>

        <dt class="col-sm-2">Created At</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToString("g")</dd>

        @if (!string.IsNullOrEmpty(Model.ImageURL))
        {
            <dt class="col-sm-2">Image</dt>
            <dd class="col-sm-10">
                <img src="@Url.Content("~/Images/Laptop.jpg")" alt="Laptop" style="width: 150px; height: auto;" />
            </dd>
        }

        @if (Model.Category != null)
        {
            <dt class="col-sm-2">Category</dt>
            <dd class="col-sm-10">@Model.Category.CategoryName</dd>
        }
    </dl>
</div>

<div>
    <a class="btn btn-secondary" asp-action="Index" asp-route-categoryId="@Model.CategoryID">Back to Products</a>
</div>
