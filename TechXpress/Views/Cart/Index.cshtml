@model IEnumerable<TechXpress.Models.Products>

@{
    ViewData["Title"] = "Your Cart";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12 col-lg-10">
            <h2 class="my-4">Shopping Cart</h2>

            <!-- If the cart is empty, display a message -->
            @if (Model == null || !Model.Any())
            {
                <p class="text-danger">Your cart is empty.</p>
            }
            else
            {
                <!-- Example: row of cards -->
                <div class="row row-cols-1 row-cols-md-3 g-4">
                    @foreach (var product in Model)
                    {
                        <div class="col">
                            <div class="card h-100">
                                <!-- Product image or placeholder -->
                                @if (!string.IsNullOrEmpty(product.ImageURL))
                                {
                                    <img src="@Url.Content(product.ImageURL)"
                                         class="card-img-top"
                                         style="max-height: 200px; object-fit: cover;"
                                         alt="Product Image" />
                                }
                                else
                                {
                                    <img src="@Url.Content("~/Images/no-image.png")"
                                         class="card-img-top"
                                         style="max-height: 200px; object-fit: cover;"
                                         alt="No image available" />
                                }

                                <div class="card-body text-center">
                                    <h5 class="card-title">@product.ProductName</h5>
                                    <p class="card-text">
                                        Price: @product.Price
                                        @* Display more details if needed: Stock, etc. *@
                                    </p>
                                </div>

                                <!-- Remove from cart button -->
                                <div class="card-footer text-center">
                                    <form asp-action="RemoveFromCart" method="post">
                                        <input type="hidden" name="productId" value="@product.ProductID" />
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            Remove
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                    <a class="btn btn-success" asp-action="Checkout">Checkout</a>
               
            }
        </div>
    </div>
</div>
