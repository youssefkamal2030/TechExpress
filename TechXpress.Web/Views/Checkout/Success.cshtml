@model TechXpress.Models.Dto_s.OrderDTO
@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
                    </div>
                    <h2 class="mb-3">Thank You for Your Order!</h2>
                    <p class="text-muted mb-4">Your order has been successfully placed and payment has been processed.</p>
                    
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">Order Details</h5>
                            <p class="mb-1"><strong>Order Number:</strong> #@Model.Id</p>
                            <p class="mb-1"><strong>Order Date:</strong> @Model.OrderDate.ToString("MMMM dd, yyyy")</p>
                            <p class="mb-1"><strong>Total Amount:</strong> $@Model.TotalAmount</p>
                            <p class="mb-0"><strong>Status:</strong> <span class="badge bg-success">@Model.Status</span></p>
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                            Continue Shopping
                        </a>
                        <a href="@Url.Action("Index", "Order")" class="btn btn-outline-secondary">
                            View Order History
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 